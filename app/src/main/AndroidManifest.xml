<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConverterAppLab3"
        tools:targetApi="31">
        <service
            android:name=".services.WeightConverterService"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name=".services.TemperatureConverterService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.LengthConverterService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activities.LengthConverterActivity"
            android:exported="false"
            android:configChanges="orientation"
            />
        <activity
            android:name=".activities.WeightConverterActivity"
            android:exported="false"
            android:configChanges="orientation"/>
        <activity
            android:name=".activities.TemperatureConverterActivity"
            android:exported="false"
            android:configChanges="orientation"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>